/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# HTML - Cache at edge, revalidate to catch updates
/index.html
  Cache-Control: public, max-age=0, s-maxage=86400, must-revalidate

# Service Worker - Edge cached 1 day, browser always checks
/sw.js
  Cache-Control: public, max-age=0, s-maxage=86400, must-revalidate

# Mobile HTML
/mobile.html
  Cache-Control: public, max-age=0, s-maxage=86400, must-revalidate

# Data files - Edge cached 1 week
/data/*
  Cache-Control: public, max-age=86400, s-maxage=604800

# Static assets - Edge cached 1 month, immutable
/assets/*
  Cache-Control: public, max-age=2592000, s-maxage=2592000, immutable

# JSON data - Edge cached 1 day
/*.json
  Cache-Control: public, max-age=3600, s-maxage=86400

# Scripts - Edge cached 1 week
/scripts/*
  Cache-Control: public, max-age=86400, s-maxage=604800

# Guides HTML - Edge cached 1 week
/guides/*
  Cache-Control: public, max-age=86400, s-maxage=604800
