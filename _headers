/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# HTML - Always revalidate (critical for SPA routing)
/index.html
  Cache-Control: public, max-age=0, s-maxage=300, stale-while-revalidate=60

# Next.js app routes - NEVER cache browser, short edge cache
/browse/*
  Cache-Control: no-cache, no-store, must-revalidate

/vehicle/*
  Cache-Control: no-cache, no-store, must-revalidate

# ALL other HTML files - Same as index.html (always revalidate)
/*.html
  Cache-Control: public, max-age=0, s-maxage=300, stale-while-revalidate=60

# Service Worker - NEVER cache (browsers need to check for updates)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - Short cache, revalidate quickly
/manifest.webmanifest
  Cache-Control: public, max-age=0, s-maxage=3600, stale-while-revalidate=60

# Public JS files (data scripts) - Moderate cache
/public/js/*
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=300

# Data files - Edge cached, but shorter stale window
/data/*
  Cache-Control: public, max-age=3600, s-maxage=86400, stale-while-revalidate=3600

# Static assets - Long cache, immutable (icons, images - rarely change)
/assets/*
  Cache-Control: public, max-age=2592000, s-maxage=2592000, immutable

# JSON data - Cache 15 min browser, 1 hour edge
/*.json
  Cache-Control: public, max-age=900, s-maxage=3600, stale-while-revalidate=300

# Favicon
/favicon.ico
  Cache-Control: public, max-age=2592000, immutable

# CSS files - Short browser cache (5 min), moderate edge cache (1 hour)
# Cache buster query strings (?v=timestamp) make each deploy a new URL
/css/*
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=300

# JS files - Short browser cache (5 min), moderate edge cache (1 hour)
# Cache buster query strings (?v=timestamp) make each deploy a new URL
/js/*
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=300

# Components - Same as JS files
/components/*
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=300, s-maxage=3600, stale-while-revalidate=300
